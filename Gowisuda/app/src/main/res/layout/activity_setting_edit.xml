<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradientbackground"
    tools:context=".SettingEdit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:background="@drawable/button"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PROFILE"
                    android:drawableLeft="@drawable/ic_arrow_forward"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-black"
                    android:textStyle="bold"
                    android:textColor="@color/Greylight"
                    android:textSize="25dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic_imageView"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/user"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <ImageView
                        android:id="@+id/imageViewName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_person"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:id="@+id/profile_name_textView"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:text="Nama"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/colorAccent"
                        android:textSize="15dp"/>

                    <Button
                        android:id="@+id/buttonEditName"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_toRightOf="@+id/profile_name_textView"
                        android:drawableRight="@drawable/ic_create"
                        android:onClick="buttonClickedEditName" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <ImageView
                        android:id="@+id/imageViewjudul"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_book"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/profile_judul_textView"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:text="Judul Skripsi"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/colorAccent"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/buttonEditjudul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/profile_name_textView"
                        android:drawableRight="@drawable/ic_create"
                        style="?android:attr/borderlessButtonStyle"
                        android:onClick="buttonClickedEditjudul"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <ImageView
                        android:id="@+id/imageViewsemester"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_school"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/profile_semester_textView"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="sans-serif"
                        android:text="Semester"
                        android:textColor="@color/colorAccent"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/buttonEditPhoneNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/profile_name_textView"
                        android:drawableRight="@drawable/ic_create"
                        style="?android:attr/borderlessButtonStyle"
                        android:onClick="buttonClickedEditsemester"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"/>
                </TableRow>
                <TextView
                    android:id="@+id/btn_save"
                    android:textSize="15dp"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:text="SAVE"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:onClick="buttonsave"
                    android:gravity="center"
                    android:background="@drawable/button2"
                    android:textColor="@color/Greylight"/>



            </LinearLayout>





            </LinearLayout>

        </LinearLayout>


